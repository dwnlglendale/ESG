@model CarbonFootprint1.Models.BranchDetails

@{
    ViewData["Title"] = "Dashboard Page";
}


<div class="p-4">
    <h1 class="p-2" style="font-size: 30px; text-align: left;">Emission Analytics</h1>
</div>

@*<div id="kt_app_content" class="app-content flex-column-fluid"></div>*@
<div id="kt_app_content_container" class="app-container container-xxl">
    <div class="row g-5 g-xl-10">
        <div class="col-xxl-6 mb-md-5 mb-xl-10">
            <div class="row g-5 g-xl-10">
                <div class="col-md-6 col-xl-12 mb-xxl-10">
                    <div class="card overflow-hidden h-md-50 mb-5 mb-xl-10">
                        <div class="card-body d-flex justify-content-between flex-column px-0 pb-0">
                            <div class="mb-4 px-9">
                                <div class="d-flex align-items-center mb-2">
                                    <span class="fs-2hx fw-bold text-gray-800 me-2 lh-1">@ViewBag.CO2Emission.ToString("0.00")</span>
                                    <span class="fs-4 fw-semibold text-gray-400 align-self-start me-1&gt;">tons &nbsp;</span>
                                </div>
                                <span class="fs-6 fw-semibold text-gray-400">Total CO2 Emission</span>
                            </div>
                            @*<div id="kt_card_widget_8_chart" class="min-h-auto" style="height: 125px"></div>*@
                        </div>
                    </div>

                    <div class="card card-flush h-md-50 mb-xl-10">
                        <div class="card-header pt-5">
                            <div class="card-title d-flex flex-column">
                                <div class="d-flex align-items-center">
                                    <span class="fs-2hx fw-bold text-dark me-2 lh-1 ls-n2"> @ViewBag.FuelCO2Emission.ToString("0.00")</span>
                                    <span class="fs-4 fw-semibold text-gray-400 align-self-start me-1&gt;">&nbsp;kgs </span>
                                </div>
                                <span class="text-gray-400 pt-1 fw-semibold fs-6">Total Fuel Emission This Month</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-12 mb-xxl-9">
                    <div class="card overflow-hidden h-md-50 mb-5 mb-xl-10">
                        <div class="card-body d-flex justify-content-between flex-column px-0 pb-0">
                            <div class="mb-4 px-9">
                                <div class="d-flex align-items-center mb-2">
                                    <span class="fs-2hx fw-bold text-gray-800 me-2 lh-1" style="font-size: 150px;">@ViewBag.ElectricityCO2Emission.ToString("0.00")</span>
                                    <span class="fs-4 fw-semibold text-gray-400 align-self-start me-1&gt;">kgs &nbsp;</span>
                                </div>
                                <span class="fs-6 fw-semibold text-gray-400">Total Electricity Emission</span>
                            </div>
                        </div>
                    </div>

                    <div class="card card-flush h-md-50 mb-xl-10">
                        <div class="card-header pt-5">
                            <div class="card-title d-flex flex-column">
                                <span class="fs-2hx fw-bold text-gray-800 me-2 lh-1"><span class="fs-4 fw-semibold text-gray-400 align-self-start me-1&gt;">GHC &nbsp;</span>@ViewBag.TotalUtilityCost.ToString("N0") </span>
                                @*<span class="fs-4 fw-semibold text-gray-400 align-self-start me-1&gt;">kgs &nbsp;</span>*@
                                <span class="text-gray-400 pt-1 fw-semibold fs-6">Total Utility Cost This Month</span>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-end pe-0">
                            @*<span class="fs-6 fw-bolder text-gray-800 d-block mb-2">Today’s Heroes</span>*@
                            <div class="symbol-group symbol-hover flex-nowrap">
                            </div>
                        </div>

                        

                    </div>
                   
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-start">
     <a class="btn btn-dark" onclick="window.history.back()">Back</a>
</div>
 <br/>
     <br/>
     @*<br/>*@
    
     </div>

<script type="text/javascript">
       function goBack() {
  window.history.go(-1);
}
</script>