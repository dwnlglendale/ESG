@model IEnumerable<BranchDetails>
@{
    ViewData["Title"] = "Export";
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0" >Export Footprint</h1>
        </div>
        
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-xxl">
        <div class="card">
            <div class="mb-8">
            </div>
            <div class="card-body pt-0">
                <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_datatable_02">
                    <thead>
                        <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-125px">Branch Name</th>
                            <th class="min-w-125px">Branch Code</th>
                            <th class="min-w-125px">Branch Size</th>
                            <th class="min-w-125px">Permanent Staff</th>
                            <th class="min-w-125px">Electricity Consumed (KwH)</th>
                         
                        </tr>
                    </thead>
                    <tbody class="fw-semibold text-gray-600">
                        @foreach (var infoFromDb in Model)
                        {
                            <tr>
                                <td>
                                    <p class="text-gray-800 text-hover-danger mb-1">@infoFromDb.BranchName</p>
                                </td>
                                <td>
                                    <p class="text-gray-600 text-hover-danger mb-1">@infoFromDb.BranchCode</p>
                                </td>
                                <td>
                                    <p class="text-gray-600 text-hover-danger mb-1">@infoFromDb.BranchSize</p>
                                </td>
                                <td data-filter="mastercard">
                                    <p class="text-gray-600 text-hover-danger mb-1">@infoFromDb.PermanentStaffNumber</p>
                                </td>
                                 <td>
                                    <p class="text-gray-600 text-hover-danger mb-1">@infoFromDb.ElectricityConsumed</p>
                                </td>
                            
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<script src="~/plugins/global/plugins.bundle.js"></script>
<script src="~/plugins/custom/datatables/datatables.bundle.js"></script>

<script type="text/javascript">
    $(document).ready(function() {
    $('#kt_datatable_02').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ]
    } );
} );
</script>

