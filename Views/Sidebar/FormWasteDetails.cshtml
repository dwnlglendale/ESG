@model CarbonFootprint1.Models.BranchDetails

@{
    ViewData["Title"] = "Waste Details";
}


<div class="p-4">
    <h1 class="p-2" style="font-size: 30px; text-align: center;">Waste (Trash)</h1>
</div>
<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-xxl">
        <div class="card">
            <div class="mb-8">
            </div>
            <div class="card-body pt-0">
                <form method="post" asp-controller="Footprint" asp-action="waste" enctype="multipart/form-data">
                    <input hidden asp-for="CarbornFootprint" />
                    <div class=row>
                        <div class="col-6 form-group p-4">
                            <label class="form-label" asp-for="MeansOfDisposal">Means of Waste Disposal<span class="text-danger"> *</span></label>
                            <select class="form-control" asp-for="MeansOfDisposal" required >
                                <option disabled selected value="">--- Select from the options below ---</option>
                                <option value="Waste Company">Collection by Waste Disposal Company</option>
                                <option value="Landfills">Landfills</option>
                                <option value="Incineration">Incineration</option>
                            </select>
                        </div>
                        <div class="col form-group p-4">
                            <label class="form-label" asp-for="CostOfDisposal">Amount Paid to Waste Company<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true"  class="form-control" asp-for="CostOfDisposal" required step="0.01" min="0" placeholder="Enter amount paid to waste company">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 form-group p-4">
                            <label class="form-label" asp-for="QuantityOfDisposal">Quantity of Waste Created and Disposed (in KG)<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true"  class="form-control" asp-for="QuantityOfDisposal" step="0.01" min="0" required placeholder="Enter waste disposed in kgs">
                        </div>
                    </div>
                          <br/>
                   <div class="col-6 form-group p-4">
                        <label class="form-label">Add Receipts for Waste</label>
                        <input class="form-control" type="file" name="attachments[]" required placeholder="Select attachment" multiple />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a class="btn btn-dark" onclick="window.history.back()">Back</a>
                        <button type="submit" class="btn btn-danger p-4">Submit Form</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">
    function goBack() {
  window.history.go(-1);
}
</script>