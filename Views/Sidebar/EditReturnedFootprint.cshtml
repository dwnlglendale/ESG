@model BranchDetails

@{
    ViewData["Title"] = "Update Details";
}


<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Footprint Details</h1>
        </div>

    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-xxl">
        <div class="card">
            <div class="mb-8">
            </div>
            <div class="card-body pt-0">
                <form method="post" enctype="multipart/form-data">
                    <input hidden asp-for="CarbornFootprint" />

                    <div class="p-4">
                        <h1 class="p-2">Comments</h1>
                    </div>
                    <fieldset disabled>
                        <div class="row">
                            <div class="col form-group p-4">
                                <textarea class="form-control" asp-for="Comment" required step="0.01" min="0" placeholder="Add Comments here..."></textarea>
                            </div>
                        </div>
                    </fieldset>

                    <div class="row">
                        <div class="p-4">
                            <h1 class="p-2">Branch Information</h1>
                        </div>
                        <div class="col form-group p-4">
                            <label class="form-label" asp-for="PermanentStaffNumber">Number of Permanent Staff<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="form-control" asp-for="PermanentStaffNumber" required placeholder="Enter number of non permanent staff">
                        </div>

                        <div class="col form-group p-4">
                            <label class="form-label" asp-for="NonPermanentStaffNumber">Number of Non Permanent Staff<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="form-control" asp-for="NonPermanentStaffNumber" required placeholder="Enter number of non permanent staff">
                        </div>
                        <div class="row">
                            <div class="p-4">
                                <h1 class="p-2">Electricity</h1>
                            </div>
                            <div class="col form-group p-4">
                                <label class="form-label" asp-for="ElectricityConsumed">Electricity Consumed (IN KwH)<span class="text-danger"> *</span></label>
                                <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="form-control" asp-for="ElectricityConsumed" required step="0.01" min="0" placeholder="Enter amount consumed">
                            </div>
                            <div class="col form-group p-4">
                                <label class="form-label" asp-for="ElectricityAmount">Amount Paid(GHS)<span class="text-danger"> *</span></label>
                                <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="form-control" asp-for="ElectricityAmount" required step="0.01" min="0" placeholder="Enter amount paid">
                            </div>
                        </div>
                    </div>

                    <div class=row>
                        <div class="col-6 form-group p-4">
                            <label class="form-label" asp-for="MeterType">Meter Type</label>
                            <select class="form-control" asp-for="MeterType">
                                <option value="" disabled>--- Select from the options below ---</option>
                                <option value="Postpaid">Postpaid</option>
                                <option value="PrePaid">Prepaid</option>
                            </select>
                        </div>

                    </div>
                    <div class="p-4">
                        <h1 class="p-2">Fuel Consumption - Generator/Plant</h1>
                    </div>
                    <div class="row">
                        <div class="col form-group p-4">
                            <label class="form-label" asp-for="AmountPaidForDieselGenerator">Amount Paid for Diesel To Power Generator/Plant<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="required form-control muted" asp-for="AmountPaidForDieselGenerator" required step="0.01" min="0" placeholder="Enter amount paid for diesel">
                        </div>
                        <div class="col form-group p-4">
                            <label class="form-label" asp-for="QuantityOfDieselPurchased">Quantity of Diesel Bought/Supplied (Litres)<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="form-control" asp-for="QuantityOfDieselPurchased" required step="0.01" min="0" placeholder="Enter quantity of diesel purchased">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col form-group p-4">
                            <label for="electricityConsumed" asp-for="QuantityOfDieselConsumed">Total Quantity of Diesel Consumed (In Litres)<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="form-control" asp-for="QuantityOfDieselConsumed" required step="0.01" min="0" placeholder="Enter quantity of diesel consumed">
                        </div>
                        <div class="col form-group p-4">
                            <label class="form-label" asp-for="QuantityOfDieselLeft">Quantity of Diesel Left (Litres) As At Month Ending<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="form-control" asp-for="QuantityOfDieselLeft" required step="0.01" min="0" placeholder="Enter quantity of diesel left">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 form-group p-4">
                            <label class="form-label" asp-for="TotalRuningGeneratorHours">Total Running Hours Of The Generator/Plant<span class="text-danger"> *</span></label>
                            <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" class="form-control" asp-for="TotalRuningGeneratorHours" required placeholder="Enter number of non permanent staff">
                        </div>
                    </div>
