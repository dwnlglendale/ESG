                            <select class="form-control" asp-for="MeansOfDisposal">
                                <option disabled selected value="">--- Select from the options below ---</option>
                                <option value="Waste Company">Collection by Waste Disposal Company</option>
                                <option value="Landfills">Landfills</option>
                                <option value="Incineration">Incineration</option>
                            </select>
                        </div>
                        <div class="col form-group p-4">
