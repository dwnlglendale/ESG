                    </div>
                    <br />
                    <br />
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-dark" onclick="window.history.back()">Back</a>
                        <button type="submit" class="btn btn-success p-4" asp-controller="Footprint" asp-action="update" asp-route-id="@Model.CarbornFootprint" asp-route-status="update">Update Form</button>
                    </div>
